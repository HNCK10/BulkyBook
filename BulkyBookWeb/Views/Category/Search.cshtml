@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Search";
}

<h1>Search Results</h1>

<ul>
    @foreach (var result in Model)
    {
        <li>@result.Name - @result.DisplayOrder</li>
    }
</ul>

@if (Model.Count() == 0)
{
    <p>No results found.</p>
}

@if (Model.Count() > 0)
{
    <p>Results found: @Model.Count()</p>
}

<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
    Back to List
</a>
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Back</h2>
        <hr />
    </div>
    <button type="submit" class="btn btn-secondary" style="width:150px" asp-controller="Category" asp-action="Index">Back</button>
</div>